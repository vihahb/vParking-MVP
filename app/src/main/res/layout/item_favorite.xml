<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/size_8"
    android:layout_marginLeft="@dimen/size_8"
    android:layout_marginRight="@dimen/size_8"
    android:layout_marginStart="@dimen/size_8"
    android:layout_marginTop="@dimen/size_8"
    android:orientation="vertical">
    <!--card_view:contentPaddingBottom="@dimen/size_16"-->
    <!--card_view:contentPaddingLeft="@dimen/size_16"-->
    <!--card_view:contentPaddingRight="@dimen/size_12"-->
    <!--card_view:contentPaddingTop="@dimen/size_8"-->

    <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_swipe_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0"
        swipe:rightEdgeSwipeOffset="0">

        <LinearLayout
            android:id="@+id/item.layout_favorite_delete"
            android:layout_width="@dimen/size_110"
            android:layout_height="wrap_content"
            android:background="@color/btn_fb_plus"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:tag="Bottom3">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:contentDescription="@null"
                android:src="@drawable/ic_favorite_border_red_36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/size_16">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_36">

                    <TextView
                        android:id="@+id/item.txt_favorite_name"
                        style="@style/Quanly_item_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_menu_black_24dp"
                        android:drawableStart="@drawable/ic_menu_black_24dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_36"
                    android:layout_marginTop="@dimen/size_8">

                    <TextView
                        android:id="@+id/item.txt_favorite_time"
                        style="@style/Quanly_item_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_time"
                        android:drawableStart="@mipmap/ic_time" />

                    <TextView
                        android:id="@+id/item.txt_favorite_money"
                        style="@style/Quanly_item_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_note"
                        android:drawableStart="@mipmap/ic_note"
                        android:paddingLeft="@dimen/size_8"
                        android:paddingStart="@dimen/size_8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_36"
                    android:layout_marginTop="@dimen/size_8">

                    <TextView
                        android:id="@+id/item.txt_favorite_address"
                        style="@style/Quanly_item_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_my_address"
                        android:drawableStart="@mipmap/ic_my_address" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
